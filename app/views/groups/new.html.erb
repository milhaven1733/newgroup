<h3>Create Group</h3>

<hr/>

<%= simple_form_for([@ticket, @group], url: ticket_groups_path, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :deadline, as: :string, input_html: { class: 'datetimepicker' } %>
    <%= f.input :target_amount %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit %>
    </div>
  </div>

<% end -%>
