<div id='top-deals'>
  <div class="row">
    <% @top_tickets.each do |ticket| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag(ticket.image_url, alt: ticket.name), ticket %>
          <div class="caption">
            <h3><%= ticket.name %></h3>
            <p><%= ticket.desc %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
