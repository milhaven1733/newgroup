<div class="col-xs-12 col-sm-6 ticket">
  <%= link_to image_tag(ticket.try(:image_url, :small), alt: ticket.try(:name), height: '180'), ticket %>
  <div class="caption">
    <h3><%= link_to ticket.try(:name), ticket %></h3>
    <div class='desc'><%= ticket.try(:desc) %></div>
    <h5 class='gray-light'><%= ticket.try(:category).try(:name) %></h5>
    <h5 class='gray-light'><%= ticket.try(:start_at).try(:strftime,"%m/%d/%Y") %></h5>
    <h5 class='gray-light'>
      <%= ticket.try(:start_at).try(:strftime, '%I:%M %p') %> 
    </h5>
    <h4 class='flat-discount yellow bold'><%= ticket.try(:flat_discount) %>% OFF</h4>
    <h5 class='purple'>Groups of <%= ticket.try(:minimum_amount) %>+</h5>
  </div>
</div>
