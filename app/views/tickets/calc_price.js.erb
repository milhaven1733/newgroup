<% if @valid %>
  $('#total-price').html("$<%= format_price @total_price %>");
  $('#flat-price').html("$<%= format_price @flat_price %>");
  $('#check-out').prop('disabled', false);
<% else %>
  $('#check-out').prop('disabled', true);
  alert('Your input quantity must be greater than 0 and less than the left tickets quantity');
<% end %>
