<div class="modal fade" id="join-group-<%= group.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Join <%= group.name %></h4>
      </div>
      <%= simple_form_for(GroupsUser.new, url: join_pay_ticket_group_path(@ticket, group), remote: true, html: { class: 'form-horizontal' }) do | f| %>
        <div class="modal-body">
          <div class="alert alert-danger" role="alert" id='join-error-<%= group.id %>' style='display: none'></div>
          <%= f.input :amount %>
        </div>
        <div class="modal-footer">
          <%= f.submit "Pay it", class: 'btn btn-primary' %>
        </div>
      <% end -%>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
