<div class="row" id="show-ticket">
	<div class="col-xs-12 col-sm-3">
		<%= render 'home/sidebar' %>
	</div>
  <div class="col-xs-12 col-sm-9">
		<div class="row">
			<h1 class="text-center"><%= @ticket.name  %></h1>
			<div class="col-xs-12 col-sm-6">
				<%= image_tag @ticket.image_url %>
				<p><%= @ticket.time_range %></p>
			</div>
			<div class="col-xs-12 col-sm-6">
				<p><%= @ticket.category.name %></p>
				<p class="ticket_desc">
					<%= @ticket.desc %>
				</p>
				<p>
					<span class="purple-back" id="flat-price">
						$<%= @ticket.flat_price %>
					</span>
					<span>&nbsp;Per Ticket</span>
				</p>
				<p>
					<span class="light-purple"> Total Quantity: </span>
					<span id="amount"><%= @ticket.amount %></span>
				</p>
				<p>
					<span class="light-purple">Minimum for Purchase: </span>
					<span><%= @ticket.minimum_amount  %></span>
				</p>
				<%= simple_form_for [:mine, @order] do |f| %>
				  <%= f.input :ticket_id, input_html:{ value: @ticket.id }, as: :hidden  %>
					<div class="row">
						<div class="col-xs-6">
							<span class="light-purple">Quantity:</span>
						</div>
						<div class="col-xs-4">
							<%= f.input_field :count, placeholder: "Enter", class: "purple-back" %>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<span class="light-purple">Total Price:</span>
						</div>
						<div class="col-xs-4">
							<%= f.input_field :price, as: :hidden %>
							<label id="total-price" class="purple-back">$00.00</label>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<span class="light-purple">Booking Fee:</span>
						</div>
						<div class="col-xs-6">
							<%= f.input_field :booking_fee, as: :hidden %>
							<label id="booking-fee" class="purple-back">$5</label>							
						</div>
					</div>
					<%= f.button :submit, 'CHECK OUT', class: 'button', disable: true %>
				<% end  %>
				
			</div>	
		</div>  
  </div>
</div>
<%= javascript_include_tag 'ticket_show' %>