<div class="row" id="show-ticket">
  <div class="col-xs-12 col-sm-3">
    <%= render 'home/sidebar' %>
  </div>
  <div class="col-xs-12 col-sm-9">
    <div class="row">
      <h1 class="text-center"><%= @ticket.name  %></h1>
      <div class="col-xs-12 col-sm-6">
        <%= image_tag @ticket.image %>
        <p><%= @ticket.time_range %>
          <%= link_to "About Merchant>>",merchant_path(@ticket.user),class: "about-merchant-link button"%>
        </p>
      </div>
      <div class="col-xs-12 col-sm-6">
        <p><%= @ticket.category.try(:name) %></p>
        <p class="ticket_desc">
        <%= @ticket.desc %>
        </p>
        <p>
        Original Price
        <span class="purple-back circle-angle">
          $<%= @ticket.oprice %>
      </span>
      <span>&nbsp;Per Ticket</span>
      </p>
      <p>
      Price Tier:
      <br/>
      <% @ticket.group_prices.try(:each) do |gp| %>
            <span>Quantity:<%= gp.count_range%></span>
            <span>Price: $<%= gp.price %></span>
          <% end %>
        </p>
        <p>
          <% if current_user.try(:is_student) %>
            <span>Student Discount:<%= @ticket.student_discount%></span>
          <% end %>
        </p>
        <p>
        <span class="light-purple"> Total Quantity: </span>
        <span id="amount"><%= @ticket.amount %></span>
        </p>
        <p>
        <span class="light-purple">Minimum for Purchase: </span>
        <span><%= @ticket.minimum_amount  %></span>
        </p>
        <%= simple_form_for @order, url: new_ticket_order_path(@ticket), method: :get do |f| %>
          <div class='row'>
            Price after discount
            <span class="purple-back circle-angle" id="flat-price">
              $<%= @flat_price || @ticket.flat_price(0, current_user.try(:is_student)) %>
            </span>
          <span>&nbsp;Per Ticket</span>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <span class="light-purple">Quantity:</span>
          </div>
          <div class="col-xs-4">
            <%= f.input_field :count, placeholder: "Enter", class: "purple-back" %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <span class="light-purple">Total Price:</span>
          </div>
          <div class="col-xs-4">
            <label id="total-price" class="purple-back circle-angle">$00.00</label>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <span class="light-purple">Booking Fee:</span>
          </div>
          <div class="col-xs-6">
            <label id="booking-fee" class="purple-back circle-angle">$5</label>							
          </div>
        </div>
        <%= f.button :submit, 'CHECK OUT', class: 'button', disabled: true, id: "check-out" %>
      <% end  %>

    </div>	
  </div>  
</div>
</div>
<script>
  var ticket_id = <%= @ticket.id %>
</script>
