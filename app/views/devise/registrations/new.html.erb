<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin'} ) do |f| %>
  <h2 class="form-signin-heading">Sign up</h2>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
  <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password Confirmation' %>
  <%= f.select :role, User.roles.keys, {}, class: 'form-control' %>
  <div class='checkbox'>
    <label><%= f.check_box :is_student %> Student </label>
  </div>
  <br/>
  <div><%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block'  %></div>
<% end %>
