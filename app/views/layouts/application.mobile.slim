doctype html
html
  head
    meta charset="utf-8"
    title GroupEt
    meta content="initial-scale=1, maximum-scale=1" name="viewport"
    = stylesheet_link_tag "application_mobile"
    = javascript_include_tag "application_mobile"
    = csrf_meta_tags 
  body
    div(data={role: "page"})
      = render "layouts/user_panel" if current_user
      header(data={role: "header", position: "fixed"})
        = content_for :header
      div(data={role: "content"})
        = content_for :notice
        = yield
      footer(data={role: "footer", position: "fixed"})
        = content_for :footer
      = content_for :javascript

