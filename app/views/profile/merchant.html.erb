<div class='row' id='main'>
  <div class='col-xs-3'>
    <%= render 'home/sidebar' %>
  </div>
  <div class='col-xs-9'>
    <div class="vote-form">
      <%= render "vote" %>
    </div>
    <div class="row">
      <div class="col-xs-5 big_avatar">
        <%= image_tag @user.avatar_url %>
        <%= @user.try(:merchant_info).try(:url) %>
      </div>
      <div class="col-xs-7">
        <h5 class='address gray-light'><%= @user.try(:address) %></h5>
        <!-- Google Maps Cavas -->
        <div id="google-map"></div>

        <div class="row">
          <div class="col-xs-4">
            <p class='operation'>Hours of Operation</p>
          </div>
        </div>

        <div class="row opening-time">
          <div class="col-xs-6 purple">
            <label>Monday - Friday:</label>
          </div>
          <div class="col-xs-6 left">
            <label><%= @user.merchant_info.try(:workday_opening_time) %></label>
          </div>
        </div>
        <div class="row opening-time">
          <div class="col-xs-6 purple">
            <label>Saturday:</label>
          </div>
          <div class="col-xs-6 left">
            <label><%= @user.merchant_info.try(:sat_opening_time) %></label>
          </div>
        </div>
        <div class="row opening-time">
          <div class="col-xs-6 purple">
            <label>Sunday:</label>
          </div>
          <div class="col-xs-6 left">
            <label><%= @user.merchant_info.try(:workday_opening_time) %></label>
          </div>
        </div>
        <p class='group-sales-phone'>Group Sales Phone</p>
        <p class='phone-number purple'><b><%= @user.merchant_info.try(:sales_phone) %></b></p>
        <p class='email'><%= mail_to @user.email %></p>
      </div>
    </div>
    <hr>

    <h3 class='upcoming-deals purple'>Upcoming Deals</h3>
    <div class="row" id="top-deals">
      <%= render partial: 'shared/ticket', collection: @top_tickets, as: :ticket %>
      <% if @more_tickets.count > 0 %>
        <%=link_to "More>>","",remote: true ,class: "btn btn-default btn-xs  pull-right",id:"more"%>
      <% end %>
    </div>

    <div >

    </div>
  </div>
</div>
<%= render 'shared/google_maps' %>
