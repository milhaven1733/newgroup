<div class='row' id='main'>
  <div class='col-xs-3'>
    <%= render 'home/sidebar' %>
  </div>
  <div class='col-xs-9'>
    <h2 class='text-center'>
			Merchant Profile
			<span class='glyphicon glyphicon-star purple'></span>
		</h2>
		
    <div class="row">
      <div class="col-xs-5 big_avatar">
        <%= image_tag @user.avatar_url %>
      </div>
      <div class="col-xs-7">
        <h5 class='address gray-light'><%= @user.address %></h5>
				<div id="google-map">
			
				</div>
				<div class="row">
					<div class="col-xs-4">
						<h6>Hours of Operation<span></h6>
					</div>
					<div class="col-xs-8">
						<hr style='height:5px'>
					</div>
				</div>
				
				<div class="row">
					<div class="col-xs-6 purple">
						<label>Monday - Friday:</label>
					</div>
					<div class="col-xs-6 left">
						<label><%= @user.try(:merchant_info).workday_opening_time %></label>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-6 purple">
						<label>Saturday:</label>
					</div>
					<div class="col-xs-6 left">
						<label><%= @user.try(:merchant_info).sat_opening_time %></label>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-6 purple">
						<label>Sunday:</label>
					</div>
					<div class="col-xs-6 left">
						<label><%= @user.try(:merchant_info).workday_opening_time %></label>
					</div>
				</div>
				<h4>Group Sales Phone</h4>
				<h5 class='purple'><b><%= @user.phone %></b></h5>
				<h5 class='email'><%= @user.email %></h5>
      </div>
    </div>
    <hr>
    
    <h3 class='upcoming-deals purple'>Upcoming Deals</h3>
    <div class="row" id="deals">
      <% @top_tickets.each do |ticket| %>
        <div class="col-xs-12 col-sm-6">
					<div class=row>
						<div class="col-xs-12 col-sm-6 thumbnail">
							<img src="<%= ticket.image_url %>" alt="<%= ticket.name %>">
						</div>
						<div class="col-xs-12 col-sm-6">
							<h4><%= ticket.name %></h4>
							<h5><%= ticket.desc %></h5>
	            <h5 class='gray-light'><%= ticket.try(:category).try(:name) %></h5>
							<h5 class='gray-light'><%= ticket.start_at.to_date %></h5>
							<h5 class='gray-light'>
								<%= ticket.start_at.strftime('%I:%M %p') %> 
								&nbsp;-&nbsp;
								<%= ticket.end_at.strftime('%I:%M %p') %> </h5>
							<h4 class='flat-discount yellow bold'><%= ticket.flat_discount %>% OFF</h4>
							<h5 class='purple'>Groups of <%= ticket.minimum_amount %>+</h5>
						</div>
					</div>
        </div>
      <% end %>
    </div>
    
		<div >
			
		</div>
	</div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
<script>
function initialize() {
  var myLatlng = new google.maps.LatLng(<%= @user.try(:merchant_info).latitude %>,
	                                      <%= @user.try(:merchant_info).longitude %>);
  var mapOptions = {
    zoom: 12,
    center: myLatlng
  }
  var map = new google.maps.Map(document.getElementById('google-map'), mapOptions);

  var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: '<%= @user.name %>'
  });
}

google.maps.event.addDomListener(window, 'load', initialize);
</script>