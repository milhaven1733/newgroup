<div class="row" id="user-profile">
	<div class="col-xs-3" id="user" style="overflow:hidden">
		<div class="col-xs-12">
			<%= image_tag current_user.avatar.middle.url if current_user.avatar? %>
		</div>
		<div class="col-xs-12">
			<h5 class='gray-light'><%= current_user.name %></h5>
			<h5><%= current_user.email %></h5>
			<h5><%= current_user.university %></h5>
			<h5><%= current_user.group_name %></h5>
			<h5><%= current_user.address %></h5>
			<h5><%= current_user.last_sign_in_at %></h5>
		</div>
	</div>
	<div class="col-xs-8" id="deals">
		<h3 class='upcoming-deals purple'>Favorite Shows</h3>
    <div class="row" id="deals">
      <%= render 'tickets', object: @favorite_shows %>
    </div>
		<h3 class='upcoming-deals purple'>Favorite Venues</h3>
    <div class="row" id="deals">
      <%= render 'tickets', object: @favorite_venues %>
    </div>
	</div>
</div>