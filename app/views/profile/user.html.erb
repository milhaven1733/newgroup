<div class="row" id="user-profile">
	<div class="col-xs-3" id="user" style="overflow:hidden">
		<div class="col-xs-12">
			<%= image_tag current_user.avatar.middle.url if current_user.avatar? %>
		</div>
		<div class="col-xs-12">
			<p><%= current_user.name %></p>
			<p><%= current_user.email %></p>
			<p><%= current_user.university %></p>
			<p><%= current_user.group_name %></p>
			<p><%= current_user.address %></p>
			<p><%= current_user.last_sign_in_at %></p>
		</div>
	</div>
	<div class="col-xs-8" id="deals">
		<h3 class='upcoming-deals purple'>Upcoming Deals</h3>
    <div class="row" id="deals">
      <%= render 'tickets', object: @favorite_shows %>
    </div>
		<h3 class='upcoming-deals purple'>Upcoming Deals</h3>
    <div class="row" id="deals">
      <%= render 'tickets', object: @favorite_venues %>
    </div>
	</div>
</div>