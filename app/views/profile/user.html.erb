<div class="row" id="user-profile">
	<div class="col-xs-3" id="user" style="overflow:hidden">
		<div class="col-xs-12">
			<%= image_tag current_user.avatar.middle.url || current_user.avatar_url %>
		</div>
		<div class="col-xs-12 user-inf user-info">
			<h5 class='gray-light user-name'><%= current_user.name %></h5>
			<h5><%= current_user.email %></h5>
			<h5><%= current_user.user_info.try(:address) %></h5>
      <% if current_user.user_info.try(:is_student) %>
        <h5>This user is a student ></h5>
      <% end %>
		</div>
	</div>
	<div class="col-xs-8" id="deals">
		<h3 class='upcoming-deals purple'>Favorite Shows</h3>
    <div class="row" id="deals">
      <%= render partial: 'shared/ticket', collection: @favorite_shows, as: :ticket %>
    </div>
		<h3 class='upcoming-deals purple'>Favorite Venues</h3>
    <div class="row" id="deals">
      <%= render partial: 'venue', collection: @favorite_venues, as: :venue %>
    </div>
	</div>
</div>