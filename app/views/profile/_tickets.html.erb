<% object.each do |ticket| %>
  <div class="col-xs-12 col-sm-6">
		<div class=row>
			<div class="col-xs-12 col-sm-6 thumbnail">
				<img src="<%= ticket.image_url %>" alt="<%= ticket.name %>">
			</div>
			<div class="col-xs-12 col-sm-6">
				<h4><%= link_to ticket.name, ticket %></h4>
				<h5 style='overflow:hidden;height:15px;'><%= ticket.desc %></h5>
        <h5 class='gray-light'><%= ticket.try(:category).try(:name) %></h5>
				<h5 class='gray-light'><%= ticket.start_at.to_date %></h5>
				<h5 class='gray-light'>
					<%= ticket.start_at.try(:strftime, '%I:%M %p') %> 
					&nbsp;-&nbsp;
					<%= ticket.end_at.try(:strftime, '%I:%M %p') %> </h5>
				<h4 class='flat-discount yellow bold'><%= ticket.flat_discount %>% OFF</h4>
				<h5 class='purple'>Groups of <%= ticket.minimum_amount %>+</h5>
			</div>
		</div>
  </div>
<% end %>