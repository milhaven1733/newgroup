<%= simple_form_for([:mine, @ticket], html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :start_at, as: :string, input_html: { class: 'datetimepicker' } %>
    <%= f.input :end_at, as: :string, input_html: { class: 'datetimepicker' } %>
    <%= f.input :oprice %>
    <%= f.input :amount %>
    <%= f.input :image_url, as: :file %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Back', mine_tickets_path, class: 'btn btn-primary' %>
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
