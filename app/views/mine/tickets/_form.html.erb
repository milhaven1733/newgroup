<%= simple_form_for([:mine, @ticket], html: {class: 'form-horizontal', onkeypress:'return event.keyCode != 13;'}, wrapper: :clean) do |f| %>
  <%= f.input_field :city, collection: Ticket::CITIES, prompt: 'Please Select a City...' %>
  <%= f.association :category, prompt: 'Please Select a Genre...', label: false %>
  <%= f.input_field :name, placeholder: 'Title' %>
  <%= f.input_field :desc, placeholder: 'Discription:' %>
  <p> &nbsp;&nbsp;<small>(3000 characters max.)</small> </p>

  <div class=row>
    <div class='col-xs-6'>
      <%= f.input_field :start_at, as: :string, placeholder: 'Start Time', id: 'datetimepicker' %>
    </div>
    <div class='col-xs-6'>
      <%= f.input_field :end_at, as: :string, placeholder: 'End Time', id: 'datetimepicker' %>
    </div>
  </div>

  <%= f.input :amount, as: :integer, label: false, placeholder: 'Total quantity of tickets' %>
  <%= f.input :minimum_amount, as: :string, label: false,  placeholder: 'Minimum tickets for purchase:' %>
  <%= f.input :oprice, label: false,  placeholder: "Original price per ticket: ", input_html: {value: (@ticket.new_record? ? nil : @ticket.oprice) } %>
  <div class='row' id='price-tiers'>You can set a flat discount here or set specific discounts for different ticket quantity tiers after upload</div>
  <div class='row'>
    <div class='col-xs-5'>
      <%= f.input_field :flatten_discount, as: :string, placeholder: "Flat Discount Ticket: 80%", disabled: true %>
    </div>
    <div class='col-xs-2 center' style='padding-top:20px;'> or </div>
    <div class='col-xs-5 input-group'>
      <span class="input-group-addon">$</span>
      <%= f.input_field :flatten_price, as: :string, placeholder: "Flat Price per Ticket: 100", disabled: true, value: format_price(@ticket.flatten_price) %>
    </div>
  </div>

  <div id='discount' class='row'>
    <div class='col-xs-3' id='additional_discount'>
      <span><input type='checkbox' id='has-student-discount'/></span>
      <span> Additional Discount for Students?</span>
    </div>
    <div class='col-xs-2' id='student-discount'>
      <%= f.input_field :student_discount, as: :string, disabled: true, value: '%' %>
    </div>
  </div>

  <div class='row'>
		<div class='col-xs-2' style='padding-top:15px;'>
			<span>&nbsp;&nbsp;Shipping Fee</span>
		</div>
		<div class='col-xs-2 input-group' id='shipping-fee'>
      <span class="input-group-addon">$</span>
			<%= f.input_field :shipping, value: format_price(@ticket.shipping) %>
		</div>
  </div>

  <div class='row'>
    <div class='col-xs-3'>
      <input type='checkbox' id='free-shipping' />
      <label>Free Shipping</label>
    </div>
    <div class='col-xs-9'>
      <input id="ticket_will_call" name="ticket[will_call]" type="checkbox" />
      <label>Free Will Call Pick-up</label>
    </div>
  </div>
  <div class="row">
    <div class='col-xs-8' style='padding-top:10px;'>&nbsp;&nbsp;Performace image(max 5 MB.This will appear in search results.)</div>
    <div class="col-xs-4">
      <%= f.input_field :image, as: :file %>
    </div>
  </div>
  <div class="row">
    <div class='col-xs-8' style='padding-top:10px;'>&nbsp;&nbsp;Seating Level</div>
    <div class="col-xs-4">
      <%= f.input_field :sitting_map, as: :file %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <%= f.button :submit, 'UPLOAD TICKET LISTING' %>
    </div>
  </div>
<% end %>
