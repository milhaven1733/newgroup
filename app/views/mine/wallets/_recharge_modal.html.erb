<div class="modal fade" id="recharge-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Recharge</h4>
      </div>
      <%= form_tag(recharge_mine_wallet_path, class: 'form-horizontal') do %>
        <div class="modal-body">
          <div class='form-group'>
            <label class='col-lg-2 control-label'>Balance:</label>
            <div class='col-lg-10'>
              <%= label_tag "balance", number_to_currency(current_user.balance) %> 
            </div>
          </div>
          <div class='form-group'>
            <label class='col-lg-2 control-label'>Recharge:</label>
            <div class='col-lg-4 input-group'>
              <span class="input-group-addon">$</span>
              <%= text_field_tag "recharge", "", class: "form-control" %> 
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <form action="" method="POST">
            <script
              src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="pk_test_qLD4b80YRV3WGvKF2N3s3kPM"
              data-amount="0"
              data-name="GroupEt">
            </script>
          </form>
        </div>
      <% end -%>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
